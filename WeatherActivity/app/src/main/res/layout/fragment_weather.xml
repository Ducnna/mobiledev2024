<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame"
    android:padding="@dimen/default_padding">

    <TextView
        android:id="@+id/textWeatherStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_weather_status"
        android:textSize="@dimen/weather_status_text_size"
        android:gravity="start"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/weather_text_color" />

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="@dimen/weather_icon_size"
        android:layout_height="@dimen/weather_icon_size"
        android:src="@drawable/cloud"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_name"
        android:textSize="@dimen/city_name_text_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/weather_text_color" />

</RelativeLayout>
